{
  "name": "netsentryx-desktop",
  "version": "1.0.0",
  "description": "Electron shell that packages the NetSentryX API, ML model, and dashboard into a desktop experience.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.5.0"
  },
  "build": {
    "appId": "com.netsentryx.ids",
    "directories": {
      "output": "dist"
    },
    "files": [
      "../api/**",
      "../dashboard/dist/**",
      "../models/saved_models/rf_model.joblib",
      "../test/**",
      "main.js"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false
    },
    "win": {
      "target": "nsis",
      "artifactName": "NetSentryX-Installer-${version}.exe"
    }
  }
}
